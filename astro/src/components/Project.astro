---
/* imports */
import { getSanityImageUrl, formatDate } from '../utils/helpers.ts';

/* declare properties */
const { project } = Astro.props;
---

<section
  class="h-screen w-full flex py-28 justify-center items-center transition-all duration-75 bg-neutrals-900"
  aria-label="Hero"
>
<!-- background layer -->
<img class="absolute inset-0 object-cover object-center w-full h-full" src={getSanityImageUrl(project.images[0])} alt={project.images[0].alttext}>
<div class="absolute inset-0 w-full h-full bg-gradient-to-t from-neutrals-900"></div>
  <div class="mx-auto w-10/12 2xl:w-[80%] relative z-10">
    <!-- headline -->
    <span class="text-sm md:text-base leading-relaxed max-w-prose">
      {formatDate(project.date)}
    </span>
    <h1
      class="mt-1 text-4xl lg:text-6xl font-display font-bold leading-[1.1] lg:leading-[1.1] mb-5"
    >
      {project.name}
    </h1>
  </div>
</section>
